public class Task2
{
  static int hMB(int h)
  {
    if(h == 0)
    {
      System.out.println("Stop: "+h);
      return 0;
    }
    
    else if(h == 0)
    {
      System.out.println("Stop: "+h);
      return h;
    }
    
    else
    {
      System.out.println("Continue: "+h);
      return h + hMB(h-1);
    }
  }
  
  public static void main(String[] args)
  {
    System.out.println("Finally "+ hMB(5));
  }
}