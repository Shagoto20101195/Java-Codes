import java.util.Scanner;
public class Problem11
{
  public static void main(String[]args)
  {
    Scanner read = new Scanner (System.in);
    
    int n = read.nextInt();
    for(int i =1; i<=n; i++)
    {
      for(int j=1; j<=n-i; j++)
      {
        System.out.print(" ");
      }
      int j = n+1;
      while(j>n-i+1)
      {
        if(i>1)
        {
          System.out.print(j-i);
        }
        else
        {
          System.out.print(j-i);
        }
        j -= 1;
      }
      
      System.out.println();
    }
  }
}