import java.util.Scanner;
public class Problem07
{
  public static void main(String[]args)
  {
    Scanner read = new Scanner (System.in);
    
    int n = read.nextInt();
    for(int i =1; i<=n; i++)
    {
      for(j=1; j<=n-1; j++)
      {
        System.out.print(" ");
      }
      for(j=1; j<=i; j++)
      {
        System.out.print("*");
      }
      System.out.println();
    }
  }
}