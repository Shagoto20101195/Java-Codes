//Written by Shagoto
import java.util.Scanner;
public class Problem21
{
  public static void main(String[]args)
  {
    Scanner read = new Scanner (System.in);
    
    int n = read.nextInt();
    
    for(int i = 1; i<=n; i ++)
    {
      for(int j = 1; j<=n-i; j++)
      {
        System.out.print(" ");
      }
      for(int j = 1; j<=2*i-1; j++)
      {
        if(i==1 || i==n || j=2*i-1)
        {
          System.out.print(j);
        }
        else if(j < 2*i-1)
        {
          for(int a = 1; a<=i-1; a++)
          {
            System.out.print(" ");
          }
        }
      }
      System.out.println();
    }
  }
}